<?xml version="1.0" encoding="utf-8" ?>

<odoo>


    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
             <field name="partner_id" position="after" >
                 <field name="student_name"/>
             </field>
        </field>
    </record>


    <!--tree view of the patient model-->
    <record id="student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
             <tree string="students" >
                 <field name="name_seq"/>
                 <field name="student_name"/>
                 <field name="age_group"/>
                 <field name="student_age"/>
                 <field name="gender"/>
                 <field name="notes"/>
                 <field name="image"/>
             </tree>
        </field>
    </record>



     <!--form view of the patient model-->
    <record id="student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
             <form string="students" >
                 <sheet>
                     <div class="oe title">
                         <h1>
                             <field name="name_seq" readonly="1"/>
                         </h1>
                     </div>
                    <group>
                        <group>
                            <field name="student_name"/>
                            <field name="name"/>
                         </group>
                         <group>
                            <field name="student_age"/>
                          </group>
                          <group>
                            <field name="age_group"/>
                          </group>
                          <group>
                            <field name="gender"/>
                          </group>
                          <group>
                            <field name="notes"/>
                            <field name="image"/>
                          </group>
                    </group>
                 </sheet>
                 <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                 </div>
              </form>
        </field>
    </record>

    <record id="school_student_search" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search string="'Search Students">
               <field name="name" filter_domain="['|',('student_name','ilike',self),('name_seq','ilike',self)]"/>
               <field name="name_seq"/>
               <field name="student_name"/>
                <separator />
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <filter string="Female" name="female" domain="[('gender','=','fe_male')]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
     </record>



    <record id="action_student" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default":1}</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
                Create a new student
            </p>
        </field>
    </record>

    <menuitem id="school_root" name="School" web_icon="LGS_School.static/description/OIP_013.jpeg" sequence="0"/>
     <menuitem id="school_student" name="Student" parent="school_root" action="action_student"/>



</odoo>

